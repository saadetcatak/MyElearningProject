@model List<MyElearningProject.DAL.Entities.Course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    int count = 0;
}


<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Kurslar</h3>

    </div>

</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">Kurslar</h4>

            <div class="table table-hover">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kurs Adı</th>
                            <th>Kategorisi</th>
                            <th>Eğitmeni</th>


                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;

                        <tr>
                            <td>@count</td>
                            <td>@item.Title</td>
                            <td>@item.Category.CategoryName</td>
                            <td>@item.Instructor.Name @item.Instructor.Surname</td>


                            <td>

                            <td>
                                <a href="/StudentCourse/WatchCourse/@item.CourseID" class="btn btn-outline-primary">Kurs İzle</a>
                            </td>
                            <td>
                                <a href="/Review/Index/@item.CourseID" class="btn btn-outline-success">Yorum Yap</a>


                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>