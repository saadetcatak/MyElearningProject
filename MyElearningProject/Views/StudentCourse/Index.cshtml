@model List<MyElearningProject.DAL.Entities.Course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    int count = 0;
}

<br />
<div class="col-lg-12">
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">Kurslar</h4>

            <div class="table table-hover">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kurs Adı</th>
                            <th>Kategorisi</th>
                            <th>Eğitmeni</th>


                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;

                            <tr>
                                <td>@count</td>
                                <td>@item.Title</td>
                                <td>@item.Category.CategoryName</td>
                                <td>@item.Instructor.Name @item.Instructor.Surname</td>


                                <td>

                                <td>
                                    <a href="https://www.youtube.com/embed/VytV9w2dAFs?si=Tir0HMSwr71e6AMq" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" class="btn btn-outline-primary">Kurs İzle</a>
                                </td>
                                <td>
                                    <a href="/Review/Index/@item.CourseID" class="btn btn-outline-success">Yorum Yap</a>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>