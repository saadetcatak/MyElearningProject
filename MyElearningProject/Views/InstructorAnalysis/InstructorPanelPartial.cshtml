@model MyElearningProject.DAL.Entities.Instructor


<div class="col-lg-4 col-xlg-3 col-md-5">
    <!-- Column -->
    <div class="card">
        <img class="card-img-top" src="@Model.CoverImage" alt="Card image cap">
        <div class="card-block little-profile text-center">
            <div class="pro-img"><img src="@Model.ImageUrl" alt="user" /></div>
            <h3 class="m-b-0">@Model.Name @Model.Surname</h3>
            <p>@Model.Title</p>
            <a href="javascript:void(0)" class="m-t-10 waves-effect waves-dark btn btn-primary btn-md btn-rounded">Follow</a>
            <div class="row text-center m-t-20">
                <div class="col-lg-4 col-md-4 m-t-20">
                    <h3 class="m-b-0 font-light">@ViewBag.courseCount</h3><small>Kurs Sayısı</small>
                </div>
                <div class="col-lg-4 col-md-4 m-t-20">
                    <h3 class="m-b-0 font-light">@ViewBag.commentCount</h3><small>Yorum Sayısı</small>
                </div>
                <div class="col-lg-4 col-md-4 m-t-20">
                    <h3 class="m-b-0 font-light">15</h3><small>Değerlendirme Puan</small>
                </div>
            </div>
        </div>
    </div>
</div>
