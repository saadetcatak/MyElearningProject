@model MyElearningProject.DAL.Entities.Course
@{
    ViewBag.Title = "UpdateCourse";
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Kurs Düzenleme Sayfası</h3>

    </div>

</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-block">


            <form method="post">
                <input type="hidden" name="CourseID" />
                <label>Kurs Adı</label>
                <br />
                <input type="text" name="Title" class="form-control" />
                <br />
                <label>Kategori</label>
                <br />
                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.category, new { @class = "form-control" })
                <br />
                <label>Görsel Url</label>
                <br />
                <input type="text" name="ImageUrl" class="form-control" />
                <br />
                <label>Fiyat ₺</label>
                <br />
                <input type="text" name="Price" class="form-control" />
                <br />
                <label>Kurs Süresi (Saat)</label>
                <br />
                <input type="number" name="Duration" class="form-control" />
                <br />
                <br />
                <button class="btn btn-outline-primary"><i class="mdi mdi-content-save"></i>Güncelle</button>
            </form>



        </div>
    </div>
</div>