@model MyElearningProject.DAL.Entities.Map
@{
    ViewBag.Title = "UpdateMap";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Lokasyon Güncelleme Sayfası</h2>
<form method="post">
    <br />
    <input type="hidden" name="MapID" value="@Model.MapID" />
    <label>Lokasyon URL</label>
    <input type="text" name="LocationURL" value="@Model.LocationURL" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" checked="@Model.Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Lokasyon Bilgilerini Güncelle</button>
</form>