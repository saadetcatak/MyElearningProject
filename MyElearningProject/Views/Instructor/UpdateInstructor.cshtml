@model MyElearningProject.DAL.Entities.Instructor
@{
    ViewBag.Title = "UpdateInstructor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Eğitmen Güncelleme Sayfası</h2>
<br />
<br />
<form method="post">
    @Html.HiddenFor(x => x.InstructorID, new { @class = "form-control" })
    <label>Eğitmen Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br /><br />
    <label>Eğitmen Soyadı</label>
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
    <br /><br />
    <label>Eğitmen Görseli</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-outline-info">Güncelle</button>
</form>