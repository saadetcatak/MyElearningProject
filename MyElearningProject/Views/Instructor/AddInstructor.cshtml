@model MyElearningProject.DAL.Entities.Instructor
@{
    ViewBag.Title = "AddInstructor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Eğitmen Kaydı</h2>
<br /><br />
<form method="post">
    <label>Eğitmen Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br /><br />
    <label>Eğitmen Soyadı</label>
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
    <br /><br />
    <label>Eğitmen Görseli</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-outline-info">Eğitmen Kaydet</button>
</form>

