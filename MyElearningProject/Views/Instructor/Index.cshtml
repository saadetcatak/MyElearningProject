@model List<MyElearningProject.DAL.Entities.Instructor>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Eğitmeler</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">Eğitmen Listesi</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th>Eğitmen Adı Soyadı</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Kurslar</th>
                        <th>Sitede Gör</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.InstructorID</td>
                            <td><img src="@item.ImageUrl" style="height:50px; width:50px; border-radius:50%" /></td>
                            <td>@item.Name @item.Surname</td>
                            <td>
                                <a href="/Instructor/DeleteInstructor/@item.InstructorID" class="btn btn-outline-danger" id="DeleteBtn"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                            </td>
                            <td><a href="/Instructor/UpdateInstructor/@item.InstructorID" class="btn btn-outline-success">Güncelle</a></td>
                            <td><a href="/Instructor/#/@item.InstructorID" class="btn btn-outline-warning">Kurslar</a></td>
                            <td><a href="/Instructor/#/@item.InstructorID" class="btn btn-outline-info">Sitede Gör</a></td>
                        </tr>
                    }
                </table>
                <a href="/Instructor/AddInstructor/" class="btn btn-outline-primary">Yeni Eğitmen Girişi</a>
            </div>
        </div>
    </div>
</div>
