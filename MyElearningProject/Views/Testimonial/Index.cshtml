@model List<MyElearningProject.DAL.Entities.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Referanslar</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">Referans Listesi</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Unvan</th>
                        <th>Görsel</th>
                        <th>Yorum</th>
                        <th>Durum</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        count++;

                        <tr>
                            <td>@count</td>
                            <td>@item.NameSurname</td>
                            <td>@item.Title</td>
                            <td><img src="@item.ImageUrl" style="height:50px; width:50px; border-radius:50%" /></td>
                            <td>@item.Comment</td>
                            <td>
                                @if (item.Status)
                                {
                                    <i class="fa fa-check-circle"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times-circle"></i>
                                }
                            </td>
                            <td>
                                <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger" id="DeleteBtn"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                            </td>
                            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                    }
                </table>

                <a href="/Testimonial/AddTestimonial/" class="btn btn-outline-info">Yeni Referans Ekle</a>

            </div>
        </div>
    </div>
</div>