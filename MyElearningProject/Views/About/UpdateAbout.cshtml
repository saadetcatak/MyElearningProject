@model MyElearningProject.DAL.Entities.About
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımızda Güncelleme Sayfası</h2>
<br />
<br />
<form method="post">
    @Html.HiddenFor(x => x.AboutID, new { @class = "form-control" })
    <label>Hakkımızda Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br /><br />
    <label>Hakkımızda Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br /><br />
    <label>Hakkımızda Görseli</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-outline-info">Güncelle</button>
</form>