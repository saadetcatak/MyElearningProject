@model MyElearningProject.DAL.Entities.About
@{
    ViewBag.Title = "AddAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Yeni Hakkımız Kaydı</h2>
<br />
<br />
<form method="post">
    <label>Hakkımızda Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br /><br />
    <label>Hakkımızda Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br /><br />
    <label>Hakkımızda Görseli</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-outline-info">Hakkımızda Kaydet</button>
</form>

