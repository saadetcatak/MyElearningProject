@model List<MyElearningProject.DAL.Entities.AboutMatter>
@{
    ViewBag.Title = "UpdateAboutMatter";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Hakkımızda Maddeleri
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Maddeler</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Matter</td>
                            <td>
                                <a href="/AboutMatter/DeleteAboutMatter/@item.AboutMatterID" class="btn btn-outline-danger" id="DeleteBtn"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                            </td>
                            <td><a href="AboutMatter/UpdateAboutMatter/@item.AboutMatterID" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                    }
                </table>
                <a href="/AboutMatter/AddAboutMatter/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
            </div>
        </div>
    </div>
</div>