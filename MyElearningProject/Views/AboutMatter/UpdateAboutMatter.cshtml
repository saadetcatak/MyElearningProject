@model MyElearningProject.DAL.Entities.AboutMatter
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımızda Güncelleme Sayfası</h2>
<br />
<br />
<form method="post">
    @Html.HiddenFor(x => x.AboutMatterID, new { @class = "form-control" })
    <label>Hakkımızda Maddeleri</label>
    @Html.TextBoxFor(x => x.Matter, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-outline-info">Güncelle</button>
</form>
